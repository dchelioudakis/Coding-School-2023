@using Session_23.Models.TransactionLineModel;
@model TransactionLineEditDto

@{
    ViewData["Title"] = "Line Edit";
}

<h1>Line Edit</h1>

<h4>Transaction Line</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TransactionId" />
            <div class="form-group">
                <label asp-for="Hours" class="control-label"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerHour" class="control-label"></label>
                <input asp-for="PricePerHour" class="form-control" />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceTaskId" class="control-label"></label>
                <select asp-for="ServiceTaskId" class="form-control" asp-items="Model.ServiceTasks"></select>
                <span asp-validation-for="ServiceTaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineerId" class="control-label"></label>
                <select asp-for="EngineerId" class="form-control" asp-items="Model.Engineers"></select>
                <span asp-validation-for="EngineerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Transaction" asp-action="Details" asp-route-id="@Model.TransactionId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

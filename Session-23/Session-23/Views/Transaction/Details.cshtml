@using Session_23.Models.TransactionModel;
@model TransactionDetailsDto

@{
    ViewData["Title"] = "Transaction Details";
}

<h1>Transaction Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manager.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <br><br>
    <h4>Transaction Lines</h4>
    <p>
        <a asp-controller="TransactionLine" asp-action="Create" asp-route-id="@Model?.Id">Add Line</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Hours
                </th>
                <th>
                    PricePerHour
                </th>
                <th>
                    Price
                </th>
                <th>
                    Transaction
                </th>
                <th>
                    Task
                </th>
                <th>
                    Engineer
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TransactionLines) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transaction.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceTask.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Engineer.Surname)
                    </td>
                    <td>
                        <a asp-controller="TransactionLine" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="TransactionLine" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="TransactionLine" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    
</div>